<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:expense_manager_30.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="expense_manager_30.Views.AddTransactionView"
             x:DataType="vm:AddTransactionViewModel">

    <StackPanel Margin="20" Spacing="10">

        <TextBlock Text="Add Transaction" FontSize="20" FontWeight="Bold" />

        <TextBlock Text="Amount:" />
        <TextBox Text="{Binding Amount}" />

        <TextBlock Text="Is Income?" />
        <CheckBox IsChecked="{Binding IsIncome}" />

        <TextBlock Text="Date:" />
        <DatePicker SelectedDate="{Binding Date}" />

        <TextBlock Text="Note:" />
        <TextBox Text="{Binding Note}" />

        <TextBlock Text="Category:" />
        <ComboBox ItemsSource="{Binding Categories}" 
                  SelectedItem="{Binding SelectedCategory}" 
                  ItemTemplate="{StaticResource CategoryTemplate}" />

        <Button Content="Add Transaction" 
                Command="{Binding AddTransactionCommand}" 
                Margin="0,10,0,0" />

        <TextBlock Text="{Binding StatusMessage}" Foreground="Green" />
    </StackPanel>
</UserControl>
