<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:expense_manager_30.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="expense_manager_30.Views.LoginView"
        x:DataType="viewModels:LoginViewModel"
        Title="LoginView">
    
        <Window.DataContext>
                <viewModels:LoginViewModel/>
        </Window.DataContext>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Login" FontSize="24" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBox Text="{Binding Username}" Width="200" Margin="0,5" Watermark="Username" />
                <TextBox Text="{Binding Password}" PasswordChar="*" Width="200" Margin="0,5" Watermark="Password" />
        
                <Button Content="Login" Width="200" Command="{Binding LoginCommand}" Margin="0,20"/>
                <Button Content="Register" Width="200" Command="{Binding OpenRegisterCommand}" Margin="0,5"/>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,10" HorizontalAlignment="Center"/>
        </StackPanel>
        
</Window>
