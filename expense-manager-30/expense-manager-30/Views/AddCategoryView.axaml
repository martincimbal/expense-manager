<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:expense_manager_30.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="expense_manager_30.Views.AddCategoryView"
             x:DataType="vm:AddCategoryViewModel">
    
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Add New Category" FontSize="20" FontWeight="Bold"/>
        
        <TextBox Watermark="Category name" Text="{Binding CategoryName}" />
        <Button Content="Add" Command="{Binding AddCategoryCommand}" />
        
        <TextBlock Text="{Binding StatusMessage}" Foreground="Green" />
    </StackPanel>
</UserControl>
