<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:expense_manager_30.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="expense_manager_30.Views.AddCategoryView"
             x:DataType="vm:AddCategoryViewModel">
    
    <StackPanel Margin="20"
                Spacing="20"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top">
        
        <TextBlock Text="Add New Category"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>
        
        <StackPanel Spacing="10"
                    HorizontalAlignment="Stretch">
            
            <TextBlock Text="Category Name:"
                       FontWeight="SemiBold"/>
            
            <TextBox Watermark="Enter category name"
                     Text="{Binding CategoryName}"
                     HorizontalAlignment="Stretch"/>
            
            <Button Content="Add Category"
                    Command="{Binding AddCategoryCommand}"
                    HorizontalAlignment="Stretch"
                    Padding="10,5"
                    Margin="0,10,0,0"/>
        </StackPanel>
        
        <TextBlock Text="{Binding StatusMessage}"
                   Foreground="Green"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"/>
    </StackPanel>
</UserControl>
