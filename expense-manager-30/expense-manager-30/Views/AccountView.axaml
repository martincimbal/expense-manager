<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:expense_manager_30.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="expense_manager_30.Views.AccountView"
             x:DataType="vm:AccountViewModel">
    
    <StackPanel Margin="20"
                Spacing="15">
        
        <Button
            Content="Logout"
            Command="{Binding LogoutCommand}"
            Background="Crimson"
            Foreground="White"
            FontSize="16"
            Padding="12"
            Height="50"
        />
        
        <Separator />
        
        <StackPanel Width="400"
                    HorizontalAlignment="Left"
                    Margin="0 10 0 0"
                    Spacing="10">
            
            <TextBlock Text="Change Password" 
                       FontWeight="Bold" 
                       FontSize="18"
                       Margin="0 0 0 5"/>
            
            <TextBox
                Watermark="Current Password"
                PasswordChar="*"
                Text="{Binding CurrentPassword, Mode=TwoWay}"
                Width="400"
                HorizontalAlignment="Left"
                Margin="0 5"/>
            
            <TextBox
                Watermark="New Password"
                PasswordChar="*"
                Text="{Binding NewPassword, Mode=TwoWay}" 
                Width="400"
                HorizontalAlignment="Left"
                Margin="0 5"/>
            
            <TextBox
                Watermark="Confirm New Password"
                PasswordChar="*"
                Text="{Binding ConfirmPassword, Mode=TwoWay}" 
                Width="400"
                HorizontalAlignment="Left"
                Margin="0 5"/>
            
            <Button
                Content="Change Password"
                Command="{Binding ChangePasswordCommand}"
                HorizontalAlignment="Left"
                Margin="0 10"
                Padding="15 5"/>
            
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       Margin="0 10 0 0"/>
        </StackPanel>
        
    </StackPanel>
</UserControl>
